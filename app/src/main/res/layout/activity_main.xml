<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:orientation="vertical"
    tools:context="jp.local.yukichan.mmsp.activities.MainActivity">

    <fragment
        android:id="@+id/fragment_display_selected_scale"
        android:name="jp.local.yukichan.mmsp.fragments.DisplaySelectedScaleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment_display_selected_code"
        android:name="jp.local.yukichan.mmsp.fragments.DisplaySelectedCodeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment_detected_code"
        android:name="jp.local.yukichan.mmsp.fragments.DetectedCodeFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>
