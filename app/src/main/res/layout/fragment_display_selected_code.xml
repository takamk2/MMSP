<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clickable="true"
    tools:context="jp.local.yukichan.mmsp.fragments.DisplaySelectedCodeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="4dp"
        android:text="←" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="4dp"
        android:text="→" />

    <!-- TODO: CodeViewの作成 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_code_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EmM7-5"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_on_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_code_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_code_name"
            android:text="on"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_on_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_code_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_on_text"
            android:text="G♭"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_on_code"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_code_name"
            android:text="(9, ♭11)"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
